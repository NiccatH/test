extends ../components/base/layout

block variables
  - const title = "ProjectName" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = false
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks
  - const hasPreloader = true

block main
  main
    //- на странице запрещен "голый" код
    //- все блоки вставляются из папки pug/components/blocks
    +intro()
    +section(sectionDataMenu)#menu
    +section(sectionDataLoader)#loader
    +section(sectionDataFirstScreen)#first-screen
    +section(sectionDataShowOnScroll)#show-on-scroll
      .section__cards-container
        each card in scrollCards
          div&attributes(card.gsapAttr)
            +card-simple(card)
    +section(sectionDataParallax)#parallax
      .section__cards-container
        each card in parallaxCards
          div&attributes(card.gsapAttr)
            +card-simple(card)

block modals
