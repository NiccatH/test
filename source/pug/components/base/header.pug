mixin header(headerMods, currentUrl)
  -
    const headerLinks = [
      {
        href: "index.html",
        text: "Анимации"
      },
      {
        href: "#",
        text: "Карта 1",
      },
      {
        href: "#",
        text: "Карта 2",
      },
      {
        href: "#",
        text: "Карта 3",
      },
      {
        href: "#",
        text: "Карта 4",
      },
    ]

  header.header(class=headerMods data-fix-block)
    .container
      if(currentUrl === "index.html")
        span.header__logo
          +icon("icon-logo", 362, 67)
      else
        a.header__logo(href="index.html", aria-label="Переход на главную")
          +icon("icon-logo", 362, 67)
      button.header__toggle(data-menu="toggle" type="button" aria-label="Переключатель отображения меню")
    nav.main-nav(data-menu="nav" data-fix-block)
      .container
        .main-nav__wrapper
          ul.main-nav__list
            each link in headerLinks
              - const activeState = currentUrl === link.href
              li.main-nav__item
                if(activeState)
                  span.main-nav__link.is-active=link.text
                else
                  a.main-nav__link(href=link.href)
                    span=link.text
